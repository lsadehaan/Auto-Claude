{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "electron": ["../../node_modules/electron-to-web/main"]
    }
  },
  "include": ["src/**/*", "../frontend/src/main/**/*"],
  "exclude": ["node_modules", "dist"]
}
